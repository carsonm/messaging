<h1>Messages</h1>
<div class="message_container">
  <ul>
    <% @messages.each do |message| %>
      <li>
        <%= message.full_name.split(' ')[0] %>
        <%= message.content %>
        <%= link_to 'Show', message %>
        <%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %>
      </li>
    <% end %>
  </ul>
</div>
<br>
<%= link_to 'New Message', new_message_path %>
