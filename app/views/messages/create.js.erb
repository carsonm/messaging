 <%
  conversation_user_ids = Array.new(Conversation.find(@message.conversation_id.to_s).users)
  conversation_user_ids.delete(CURRENT_USER.to_s)
  conversation_names = Hash.new
  conversation_user_ids.each { |user_id| conversation_names[user_id] = User.find(user_id).name.split(' ')[0] }
  to_conversation_names = Array.new
  conversation_names.each{ |key, value| to_conversation_names << value.split[0] unless @message.user_id == key}
%>
$('.reply_form').hide();
$('.message_content').hide();
$('.message_container ul').prepend("<%= escape_javascript(render(:partial => 'messages/message', :locals => {:message => @message, :to_conversation_names => to_conversation_names})) %>");
$('#message_content_<%= @message._id.to_s %>').show();